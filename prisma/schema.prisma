model Trip {
  id          String     @id @default(cuid())
  startTime   DateTime   @default(now())
  endTime     DateTime?
  startKm     Float?
  endKm       Float?
  distanceKm  Float?
  isActive    Boolean    @default(true)
  // Ge√ßilen noktalar buraya kaydedilecek
  locations   LocationPoint[]
