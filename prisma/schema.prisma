generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String?   @unique
  password  String?
  name      String?
  deviceId  String    @unique // Telefonun benzersiz kimliği (ZORUNLU)
  vehicles  Vehicle[] // Kullanıcının araçları
  trips     Trip[]
  fuelLogs  FuelLog[]
  createdAt DateTime  @default(now())
}

model Vehicle {
  id          String   @id @default(cuid())
  brand       String   // Örn: BMW
  model       String   // Örn: 1.16
  year            Int      @default(0) // Model Yılı
  fuelType        String?  // Yakıt Tipi
  transmission    String?  // Vites Tipi
  avgConsumption  Float?   // Ortalama Tüketim
  plate       String?  // Plaka
  isDefault   Boolean  @default(false) // Varsayılan araç mı?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  trips       Trip[]
  createdAt   DateTime @default(now())
}


model Trip {
  id          String     @id @default(cuid())
  startTime   DateTime   @default(now())
  endTime     DateTime?
  startKm     Float?
  endKm       Float?
  distanceKm  Float?
  isActive    Boolean    @default(true)
  // Geçilen noktalar buraya kaydedilecek
  locations   LocationPoint[]
  vehicleId   String
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model CarLibrary {
  id              String   @id @default(cuid())
  brand           String   // make
  model           String   // model
  year            Int      // year
  fuelType        String?  // fuel_type
  transmission    String?  // transmission
  cylinders       Int?     // cylinders
  combinationMpg  Float?   // API'den gelen orijinal veri
  avgConsumption  Float?   // L/100km (hesapladığımız veri)
  createdAt       DateTime @default(now())
}

model LocationPoint {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id])
}

model FuelLog {
  id          String   @id @default(uuid())
  liters      Float
  totalPrice  Float
  currentKm   Float
  date        DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}